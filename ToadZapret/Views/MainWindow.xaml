<ui:FluentWindow x:Class="ToadZapret.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 mc:Ignorable="d"
                 Title="ToadZapret"
                 WindowStartupLocation="CenterScreen"
                 WindowBackdropType="Mica"
                 WindowCornerPreference="Round"
                 Height="500"
                 Width="450"
                 MinHeight="450"
                 MinWidth="400"
                 ExtendsContentIntoTitleBar="True">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- TitleBar -->
        <ui:TitleBar Title="ToadZapret" Grid.Row="0">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/icon.ico" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="ToadZapret" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="Обход блокировок" 
                           FontSize="14" 
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Status Card -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Статус подключения" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               Margin="0,0,0,15"/>
                    
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Status Icon -->
                        <Ellipse Grid.Column="0" 
                                 Width="16" 
                                 Height="16" 
                                 Margin="0,0,12,0"
                                 Fill="{Binding IsWorked, Converter={StaticResource BoolToStatusColorConverter}}"/>
                        
                        <!-- Status Text -->
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding StatusText}" 
                                   FontSize="14"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Connection Info -->
                    <TextBlock Text="Защищенное соединение для обхода блокировок" 
                               FontSize="12" 
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
            
            <!-- Main Button -->
            <ui:Button Grid.Row="2" 
                       Command="{Binding StartZapretCommand}"
                       Content="{Binding ButtonContent}"
                       Appearance="Primary"
                       HorizontalAlignment="Stretch"
                       Height="50"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,15"/>
            
            <!-- Footer -->
            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <TextBlock Text="Защищено ToadZapret" 
                           FontSize="12" 
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
